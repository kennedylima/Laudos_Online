<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="fill"
    tools:context="br.com.metodoi.laudos_online.Laudo">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logotipo"
        android:src="@drawable/logotipo" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/logotipo"
        android:elevation="2dp"
        android:id="@+id/codigo"
        android:hint="CÃ³digo"
        app:met_baseColor="@color/corPrincipal"/>


    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/codigo"
        android:elevation="2dp"
        android:id="@+id/chave"
        android:hint="Chave"
        app:met_baseColor="@color/corPrincipal"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chave"
        android:elevation="5dp"
        android:id="@+id/botaoAcessar"
        android:text="Acessar"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@color/corPrincipal" />

</RelativeLayout>
